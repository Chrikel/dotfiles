#
# Shell-related
#
alias reload="source ~/.bashrc"

#
# Utility
#
alias dotfiles="mate -w ~/bin/dotfiles"

#
# Development-related
#
alias gs="git status"
alias ss="./script/server"
alias sc="./script/console"

alias bx="bundle exec $1"

alias powlog="cd ~/Library/Logs/Pow/apps && ls"

#
# Network-related
#
alias flushdns="dscacheutil -flushcache"
