" Local customizations overriding vim/vimrc settings

" Append local runtime folder for non-Janus customization
set runtimepath+=~/.vim.local,~/.vim.local/after

" Set color scheme
"colorscheme neon
colorscheme Tomorrow-Night-Eighties

" Turn off scroll bars, they are ugly
set guioptions-=L
set guioptions-=r

" Clear search highlighting with <ESC>
nnoremap <esc> :noh<return><esc>

" Scrolloff for context-viewing bliss
set scrolloff=5
set sidescrolloff=5
