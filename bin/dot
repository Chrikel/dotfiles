#!/bin/sh
#
# Stolen from: https://github.com/holman/dotfiles/
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.

FILE=$ZSH/osx/set-defaults.sh

# Set OS X defaults
if [[ -f $FILE ]]
then
  $FILE
  echo "Set OS X defaults"
else
  echo "Skipped OS X defaults; $FILE not found"
fi

# Upgrade homebrew
brew update

# Install homebrew packages
FILE=$ZSH/homebrew/install.sh
if [[ -f $FILE ]]
then
  $FILE 2>&1
  echo "Installed Homebrew packages"
else
  echo "Skipped Homebrew packages; $FILE not found"
fi

unset FILE