export PATH="$HOME/bin:/usr/local/bin:/usr/local/sbin:/usr/local/share/python:$PATH"

# Editor settings
#   Sublime: 'subl -w'
#   MacVim:  'mvim'
#   Vim:     'vim'
export EDITOR="vim"
export GEM_EDITOR="vim"

# Node
export NODE_PATH="/usr/local/lib/node_modules:$NODE_PATH"

# Sublime Text 2
export SUBLIME_DATA="$HOME/Library/Application Support/Sublime Text 2"
export SUBLIME_PKG="$SUBLIME_DATA/Packages"
export SUBLIME_USR="$SUBLIME_PKG/User"

# Autoenv
source /usr/local/Cellar/autoenv/0.1.0/activate.sh

# RVM
[[ -s "$HOME/.rvm/scripts/rvm" ]] && . "$HOME/.rvm/scripts/rvm"
