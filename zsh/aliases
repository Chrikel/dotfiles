#
# Shell-related
#
alias reload="source ~/.zshrc"

#
# Utility
#
alias dotfiles="$EDITOR $DOT_FILES"

#
# Development-related
#
alias gs="git status"

alias bx="bundle exec $1"
alias be="bundle exec $1"

alias fr="foreman run $1"

alias r="rails"

alias e="subl -n ."
# alias e="vim ."

alias powlog="cd ~/Library/Logs/Pow/apps && ls"

# Clear Xcode's DerivedData cache
alias ded="rm -rf ~/Library/Developer/Xcode/DerivedData"

# Purge gems
alias gem-purge="gem list | cut -d' ' -f1 | xargs gem uninstall -aIx"

# Reset TERM when using tmux
alias tmux="TERM=screen-256color-bce tmux"

#
# Network-related
#
alias flushdns="sudo killall -HUP mDNSResponder"

#
# Modcloth-related
#
alias ssh-personal="cp ~/.ssh/personal/id_rsa* ~/.ssh"
alias ssh-modcloth="cp ~/.ssh/modcloth/id_rsa* ~/.ssh"
