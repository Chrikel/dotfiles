#
# Shell-related
#
alias reload="source ~/.zshrc"

#
# Utility
#
alias df="cd $DOT_FILES"
alias dotfiles="$EDITOR $DOT_FILES"

#
# Development-related
#
alias gs="git status"

alias bx="bundle exec $1"
alias r="rails"
alias rake="noglob rake"

# alias e="subl -n ."
alias e="vim ."

alias powlog="cd ~/Library/Logs/Pow/apps && ls"

# Clear Xcode's DerivedData cache
alias ded="rm -rf ~/Library/Developer/Xcode/DerivedData"

# Reset TERM when using tmux
alias tmux="TERM=screen-256color-bce tmux"

#
# Network-related
#
alias flushdns="dscacheutil -flushcache"

#
# PG-related
#
alias fixvpn="sudo ruby $DOT_FILES/misc/patch_juniper_pac.rb"
